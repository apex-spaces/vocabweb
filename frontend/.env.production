# Frontend Production Environment Variables
# This is a template file - update with actual values after backend deployment

# API Configuration
# Update this URL after backend Cloud Run deployment
NEXT_PUBLIC_API_URL=https://vocabweb-api-XXXXXXXXXX-df.a.run.app

# Application Configuration
NEXT_PUBLIC_APP_NAME=VocabWeb
NEXT_PUBLIC_APP_ENV=production

# Firebase Configuration (if using Firebase Auth)
# Get these values from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=YOUR_PROJECT.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=YOUR_PROJECT.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
NEXT_PUBLIC_FIREBASE_APP_ID=YOUR_APP_ID

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true
